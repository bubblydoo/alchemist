{
    "compilerOptions": {
	  "allowSyntheticDefaultImports": true,
	  "lib": ["DOM","ES6","ES2019","ES2020"],
	  "moduleResolution": "node",
	  "strict": true,
	  "strictNullChecks": false,
	  "noImplicitReturns": true,
        "esModuleInterop": true,
        "jsx": "react",
        "module": "esnext",
        "outDir": "./dist/",
        "sourceMap": true,
	  "target": "ES2020",
	  "disableSizeLimit": false,
	  "typeRoots": [
		"./src/inspector/model",
		"./node_modules/@types",
		"./node_modules/@adobe-uxp-types"
	  ]
    },

    "exclude": [
        "node_modules"
    ]
}
